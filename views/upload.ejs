<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>

    <%- include('partials/header') %>

    <section name="jumbotron" >
        <div class="jumbotron text-center">
            <h1>TwitBot</h1>
            <p>Best guide threads for twitter!</p>
            <p>
                <a class="btn btn-primary btn-lg" role="button">Learn more
                    &raquo;</a>
            </p>
        </div>
    </section>

    <div class="container">
        <form class="needs-validation" novalidate>
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="validatedCustomFile" required>
                        <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                        <div class="invalid-feedback">Example invalid custom file feedback</div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationCustom01" class="sr-only">File name</label>
                    <input type="text" class="form-control" id="validationCustom01" placeholder="File name" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                            <input type="checkbox" id="invalidCheck">
                            </span>
                        </div>
                        <input type="text" class="form-control" placeholder="Tweet Now?" aria-label="" aria-describedby="basic-addon1" disabled>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <button type="submit" class="btn btn-primary btn-block">Upload File</button>
                </div>
            </div>
        </form>

        <!-- // test // -->

        

    </div>

    <%- include('partials/footer') %>

  </body>
</html>